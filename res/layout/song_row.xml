<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_color_inv"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/songLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/songArt"
        android:ellipsize="end"
        android:gravity="center|left"
        android:padding="8dp"
        android:singleLine="true"
        android:textColor="@drawable/text_selector_inv"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/songArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/songLabel"
        android:layout_below="@+id/songLabel"
        android:layout_toLeftOf="@+id/songDuration"
        android:ellipsize="end"
        android:padding="8dp"
        android:singleLine="true"
        android:textColor="@drawable/text_selector_inv"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/songDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/songArt"
        android:layout_alignParentRight="true"
        android:ellipsize="end"
        android:gravity="center"
        android:padding="8dp"
        android:singleLine="true"
        android:textColor="@drawable/text_selector_inv"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/songArt"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:background="#000000"
        android:contentDescription="@string/desc_album_art"
        android:padding="2dp"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>