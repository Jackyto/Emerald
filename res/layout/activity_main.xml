<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ddeedd"
    android:orientation="vertical" >

    <!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/songLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:context="com.emerald.MainActivity" >

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <fragment
            android:id="@+id/navigation_drawer"
            android:name="com.emerald.NavigationDrawerFragment"
            android:layout_width="@dimen/navigation_drawer_width"
            android:layout_height="match_parent"
            android:layout_gravity="start" />
    </android.support.v4.widget.DrawerLayout>

    <RelativeLayout
        android:id="@+id/songLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="#004a00"
        android:padding="4dp" >

        <ImageButton
            android:id="@+id/playButton"
            android:layout_width="@dimen/player_button_width"
            android:layout_height="@dimen/player_button_height"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:background="#b5b5b5"
            android:src="@android:drawable/ic_media_play" />

        <ImageButton
            android:id="@+id/prevButton"
            android:layout_width="@dimen/player_button_width"
            android:layout_height="@dimen/player_button_height"
            android:layout_alignParentTop="true"
            android:layout_margin="4dp"
            android:layout_toLeftOf="@+id/playButton"
            android:background="#b5b5b5"
            android:src="@android:drawable/ic_media_rew" />

        <ImageButton
            android:id="@+id/nextButton"
            android:layout_width="@dimen/player_button_width"
            android:layout_height="@dimen/player_button_height"
            android:layout_alignParentTop="true"
            android:layout_margin="4dp"
            android:layout_toRightOf="@+id/playButton"
            android:background="#b5b5b5"
            android:src="@android:drawable/ic_media_ff" />

    </RelativeLayout>

    <TextView
        android:id="@+id/songLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/songLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="#00ae00"
        android:padding="4dp" />

</RelativeLayout>